  "maps": [
    {
      "match": {
        "name": "/aos*",
        "source_node": "pi1"
      },
      "rename": {
        "name": "/pi1/aos"
      }
    },
    {
      "match": {
        "name": "/aos*",
        "source_node": "pi2"
      },
      "rename": {
        "name": "/pi2/aos"
      }
    }
  ],
  "nodes": [
    {
      "name": "pi1",
      "hostname": "pi1",
      "port": 3141
