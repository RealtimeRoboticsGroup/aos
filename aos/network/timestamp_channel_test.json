    {
      "name": "/timestamps_too_fast",
      "type": "aos.examples.Ping",
      "source_node": "pi1",
      "frequency": 15,
      "destination_nodes": [
        {
          "name": "pi2",
          "timestamp_logger": "REMOTE_LOGGER",
          "timestamp_logger_nodes": ["pi1"]
        }
      ]
    }
