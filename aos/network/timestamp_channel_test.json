{
  "channels": [
    {
      "name": "/pi1/aos",
      "type": "aos.logging.LogMessageFbs",
      "source_node": "pi1",
      "frequency": 200,
      "num_senders": 20,
      "max_size": 2048
    },
    {
      "name": "/pi2/aos",
      "type": "aos.logging.LogMessageFbs",
