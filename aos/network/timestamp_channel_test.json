    {
      "name": "/pi1/aos",
      "type": "aos.timing.Report",
      "source_node": "pi1",
      "frequency": 50,
      "num_senders": 20,
      "max_size": 2048
    },
    {
      "name": "/pi2/aos",
      "type": "aos.timing.Report",
      "source_node": "pi2",
      "frequency": 50,
      "num_senders": 20,
      "max_size": 2048
    },
    {
      "name": "/pi1/aos/remote_timestamps/pi2/nominal/aos-examples-Ping",
