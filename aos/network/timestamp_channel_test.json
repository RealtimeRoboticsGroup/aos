    {
      "name": "/pi2/aos",
      "type": "aos.message_bridge.ServerStatistics",
      "source_node": "pi2",
      "frequency": 2
    },
    {
      "name": "/pi1/aos",
      "type": "aos.message_bridge.ClientStatistics",
      "source_node": "pi1",
      "frequency": 15
    },
    {
      "name": "/pi2/aos",
      "type": "aos.message_bridge.ClientStatistics",
      "source_node": "pi2",
      "frequency": 15
